{
  "name": "promisely",
  "version": "0.0.0",
  "description": "A collection of tiny utilities to make working with Promises easier.",
  "keywords": [
    "promise",
    "promises",
    "async",
    "await",
    "promise utilities",
    "promise helpers",
    "promise hash",
    "promise object",
    "rsvp",
    "rsvp.hash",
    "promise all",
    "async tools"
  ],
  "homepage": "https://github.com/RobbieTheWagner/promisely#readme",
  "bugs": {
    "url": "https://github.com/RobbieTheWagner/promisely/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RobbieTheWagner/promisely.git"
  },
  "license": "MIT",
  "author": "Robbie Wagner <rwwagner90@gmail.com>",
  "exports": {
    ".": {
      "import": "./dist/hash.js",
      "types": "./dist/hash.d.ts"
    }
  },
  "main": "dist/hash.js",
  "types": "dist/hash.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "vitest watch",
    "test": "vitest run"
  },
  "devDependencies": {
    "@release-it-plugins/lerna-changelog": "^7.0.0",
    "@types/node": "^20.17.30",
    "release-it": "^17.11.0",
    "typescript": "^5.8.2",
    "vitest": "^1.6.1"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "release-it": {
    "plugins": {
      "@release-it-plugins/lerna-changelog": {
        "infile": "CHANGELOG.md",
        "launchEditor": true
      }
    },
    "git": {
      "tagName": "v${version}"
    },
    "github": {
      "release": true,
      "tokenRef": "GITHUB_AUTH"
    }
  }
}
